<UserControl x:Class="WpfControlLibrary2.Elements.SidePanel1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary2.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" >
    <Grid>
        <Border x:Name="menuicon" CornerRadius="10"  Width="40" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Background="Transparent" MouseDown="menuicon_MouseDown" Panel.ZIndex="1">
            <Image x:Name="IconImg"  Source="menuicon.png" Margin="7"/>
        </Border>

        <Border x:Name="ControlPanelBorder" Width="190" HorizontalAlignment="Left" Background="Gray" Margin="-200,5,5,5" CornerRadius="10" Panel.ZIndex="0">
            <Grid x:Name="Children">

            </Grid>
        </Border>
    </Grid>
</UserControl>
