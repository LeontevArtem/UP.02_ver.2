<UserControl x:Name="userControl" x:Class="WpfControlLibrary2.Elements.Switch1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary2.Elements"
             mc:Ignorable="d" MinHeight="30" MaxHeight="30" MinWidth="50" d:Width="50" d:Height="30">

    <Grid x:Name="MainGrid">
        <Border Background="#FFB71919" CornerRadius="15" x:Name="BackgroundBorder" MouseDown="Switch_MouseDown">
            <Grid x:Name="SwitchGrid"  Margin="0,5,0,5">
                <Border Background="#e3e3e3"  CornerRadius="30"  HorizontalAlignment="Left" Height="20" Width="20" Margin="5,0,0,0" x:Name="SwitchBox" >

                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
