<Page x:Class="UP._02_ver._2.Pages.Regin.ReginSteps.Step2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP._02_ver._2.Pages.Regin.ReginSteps"
      xmlns:uc ="clr-namespace:WpfControlLibrary2.Elements;assembly=WpfControlLibrary2"
      mc:Ignorable="d" 
      d:DesignHeight="345" d:DesignWidth="300"
      Title="Step2">

    <Grid Background="White">
        <Label Content="Имя:" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="10,10,0,0" Height="30"/>
        <uc:TextBox1 x:Name="NameBox" VerticalAlignment="Top"  Margin="10,50,10,0"/>
        <Label Content="Фамилия:" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="10,90,0,0" Height="30"/>
        <uc:TextBox1 x:Name="SurnameBox" VerticalAlignment="Top"  Margin="10,130,10,0" />
        <Label Content="Отчество:" VerticalAlignment="Top" FontSize="16" FontWeight="Bold" Margin="10,170,0,0" Height="30"/>
        <uc:TextBox1 x:Name="PatronymicBox" VerticalAlignment="Top"  Margin="10,210,10,0" />
        <uc:Button1 Height="30" VerticalAlignment="Bottom" XAMLTextColor="White" Margin="10" XAMLText="Далее" MouseDown="NextStepClick"/>
    </Grid>
</Page>
