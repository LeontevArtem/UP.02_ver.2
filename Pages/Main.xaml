<Page x:Class="UP._02_ver._2.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP._02_ver._2.Pages"
      xmlns:uc ="clr-namespace:WpfControlLibrary2.Elements;assembly=WpfControlLibrary2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="White">
        <Grid x:Name="TopGrid" Height="50" VerticalAlignment="Top" Background="#E9F1FA">
            <Label Content="Система управления инвентаризацией" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
            
        </Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="5,55,5,0" >
            <Grid x:Name="BodyGrid" >
                <uc:Button1 x:Name="Inventorization" XAMLTextColor="White" Margin="2"  Height="150" XAMLText="Инвенторизация" MouseDown="Inventorization_MouseDown"  VerticalAlignment="Top"/>
                <WrapPanel Orientation="Horizontal" Margin="0,155,0,0">
                    <uc:Button1 x:Name="Equipment" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Оборудование" MouseDown="EquipmentClick"/>
                    <uc:Button1 x:Name="Rooms" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Аудитории" MouseDown="RoomsClick"/>
                    <uc:Button1 x:Name="Users" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Пользователи" MouseDown="UserClick"/>
                    <uc:Button1 x:Name="Developers" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Разработчики"/>
                    <uc:Button1 x:Name="Types" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Типы оборудования" MouseDown="TypeClick"/>
                    <uc:Button1 x:Name="Reports" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Отчет" MouseDown="ReportsClick"/>
                    <uc:Button1 x:Name="Import" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Импорт" MouseDown="ImportClick"/>
                    <uc:Button1 x:Name="Directions" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Направление" MouseDown="DirectionsClick"/>
                    <uc:Button1 x:Name="Models" XAMLTextColor="White" Margin="2" Width="150" Height="150" XAMLText="Модели" MouseDown="ModelsClick"/>
                </WrapPanel>
            </Grid>
        </ScrollViewer>
      
    </Grid>
</Page>
